@model Molibar.WebTracking.Web.Models.Demo.DemoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Demo</title>
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/mvcfoolproof.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/EventLogging.js")" type="text/javascript"></script>
    </head>
    <body>
        <style>.field-validation-error {
     color: #ff0000;
 }

 .field-validation-valid {
     display: none;
 }

 .input-validation-error {
     border: 1px solid #ff0000;
     background-color: #ffeeee;
 }

 .validation-summary-errors {
     font-weight: bold;
     color: #ff0000;
 }
        </style>
        @Html.Hidden("FormTrackerUrl", Url.Action("FormEvent", "Tracking"))
        @Html.Hidden("PageTrackerUrl", Url.Action("PageEvent", "Tracking"))
        <div id="scrollable" style="height:180px;background-color:#ccc;overflow:auto">
            @using (Html.BeginForm("Submit", "Demo", FormMethod.Post, new { id = "demo" }))
            {
                @Html.HiddenFor(x => x.PageId)
                @Html.HiddenFor(x => x.VisitGuid)
                <div>@Html.LabelFor(x => x.StringValue)</div>
                <div>@Html.TextBoxFor(x => x.StringValue, new { placeholder = "The String Value" })</div>
                <div>@Html.ValidationMessageFor(x => x.StringValue)</div>

                <div>@Html.LabelFor(x => x.CheckBox)</div>
                <div>@Html.CheckBoxFor(x => x.CheckBox)</div>
                <div>@Html.ValidationMessageFor(x => x.CheckBox)</div>

                <div>@Html.LabelFor(x => x.Selected)</div>
                <div>@Html.DropDownListFor(x => x.Selected, Model.SelectList)</div>
                <div>@Html.ValidationMessageFor(x => x.Selected)</div>
                <div>
                    <button id="submit" type="submit" value="Submit">Get your <b>results</b></button>
                </div>
                <div style="background-color: #aaa;height:100px"></div>
            }
        </div>
        <div>
            Events Log
        </div>
        <div id="events">
            
        </div>
    </body>
</html>